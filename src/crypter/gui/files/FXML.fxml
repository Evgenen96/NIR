<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="crypter.gui.files.CryptController">
   <center>
      <HBox prefHeight="465.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="vBox1">
               <children>
                  <Label text="Выберите файлы">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                  <TreeView fx:id="treeviewFileBrowse" minHeight="350.0" prefHeight="347.0" prefWidth="385.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TreeView>
                  <ToolBar prefHeight="40.0" prefWidth="385.0">
                     <items>
                        <Button mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../res/list-add.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <TextField fx:id="textFileInfo" editable="false" prefHeight="25.0" prefWidth="300.0" />
                     </items>
                  </ToolBar>
               </children>
               <HBox.margin>
                  <Insets left="4.0" />
               </HBox.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="402.0" prefWidth="46.0" HBox.hgrow="NEVER">
               <children>
                  <Button fx:id="btAddFile" alignment="CENTER" mnemonicParsing="false" onAction="#btAddFileAction" text="&gt;&gt;&gt;" />
               </children>
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </HBox>
            <VBox prefHeight="360.0" prefWidth="365.0">
               <children>
                  <Label text="Список выбранных файлов">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox>
                     <children>
                        <TableView fx:id="tableSelectedFiles" minHeight="350.0" prefHeight="409.0" prefWidth="364.0">
                          <columns>
                            <TableColumn fx:id="colFileName" prefWidth="205.0" text="Имя файла" />
                              <TableColumn fx:id="colFileType" minWidth="0.0" prefWidth="30.0" text="Тип" />
                              <TableColumn fx:id="colFileSpace" prefWidth="76.0" text="Размер" />
                              <TableColumn fx:id="colFileStatus" prefWidth="52.0" style="-fx-alignment: CENTER;" text="Статус" />
                          </columns>
                        </TableView>
                     </children>
                  </HBox>
                  <ToolBar prefHeight="42.0" prefWidth="365.0">
                     <items>
                        <Button fx:id="btRemoveSelected" mnemonicParsing="false" onAction="#btRemoveSelectedAction">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../res/list-remove.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="btRemoveAll" mnemonicParsing="false" onAction="#btRemoveAllAction">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../res/list-remove.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <TextField fx:id="textSelFileInfo" editable="false" prefHeight="25.0" prefWidth="250.0" />
                     </items>
                  </ToolBar>
               </children>
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" onAction="#btRefreshTreeAction" text="Button" />
        </items>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ToolBar>
   </top>
   <bottom>
      <VBox prefHeight="158.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="42.0" prefWidth="800.0">
               <children>
                  <Button fx:id="btEncryptFile" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#btEncryptFileAction" text="Зашифровать">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btDecryptFile" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#btDecryptFileAction" text="Расшифровать">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
